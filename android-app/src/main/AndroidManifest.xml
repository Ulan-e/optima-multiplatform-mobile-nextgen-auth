<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="kg.optima.mobile">

	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".android.OptimaApp"
		android:icon="@mipmap/optima_logo"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name="kg.optima.mobile.android.ui.SingleActivity"
			android:exported="true"
			android:theme="@style/AppTheme"
			android:windowSoftInputMode="adjustResize">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name="kg.optima.mobile.android.ui.features.biometrics.StartBiometricsActivity"
			android:noHistory="true"
			android:screenOrientation="portrait"/>

		<activity android:name="kg.optima.mobile.android.ui.features.biometrics.LivenessActivity"
			android:noHistory="true"
			android:screenOrientation="portrait"/>

		<activity android:name="kg.optima.mobile.android.ui.features.biometrics.DocumentScanActivity"
			android:noHistory="true"
			android:screenOrientation="portrait"/>
	</application>
</manifest>
