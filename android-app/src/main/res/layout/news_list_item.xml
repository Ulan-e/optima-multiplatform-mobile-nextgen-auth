<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_5dp"
    android:layout_marginHorizontal="@dimen/margin_15dp"
    android:background="@drawable/bg_history_rounded_item">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_12dp">

        <TextView
            android:id="@+id/tvPublishDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|start"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/gray_102_0_0_0"
            android:textSize="15sp"
            tools:text="10.11.2021" />

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:paddingTop="2dp"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/gray_black_56_56_56"
            tools:text="Индивидуальные курсы по покупку иностранной валюты" />
    </LinearLayout>
</RelativeLayout>