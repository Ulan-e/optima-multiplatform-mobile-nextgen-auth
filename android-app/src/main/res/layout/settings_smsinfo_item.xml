<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/imgItem" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitle"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/gray_black_56_56_56"
            android:layout_toEndOf="@+id/imgItem"
            android:layout_toStartOf="@+id/swSmsNot"/>

        <TextView
            android:layout_below="@+id/imgItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvInfo"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="17sp"
            android:text="@string/sms_notif"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textColor="@color/card_platinum"
            android:layout_toEndOf="@+id/imgItem"
            android:layout_toStartOf="@+id/swSmsNot"/>

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/swSmsNot"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/gray_black_56_56_56"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="17sp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:id="@+id/imgReload"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:textColor="@color/gray_black_56_56_56"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:textSize="17sp"
            app:srcCompat="@drawable/ic_reloaded"
            android:visibility="gone"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:background="#e7e7e7" />

</LinearLayout>