<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/gray_black_56_56_56"
            android:text="@string/account_number_card"
            android:layout_centerHorizontal="true"/>-->

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_number_card"
            android:background="@color/blue_0_93_186"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:paddingLeft="20dp"
            android:paddingEnd="20dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"/>

        <LinearLayout
            android:id="@+id/linName"
            android:layout_below="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:background="@drawable/border_blue"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/name"
                android:maxLength="20"
                android:inputType="textNoSuggestions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="@string/name"
                android:layout_weight="1"
                android:background="@drawable/list_item_selector"/>

            <ImageView
                android:layout_width="20dp"
                android:id="@+id/clearSearch"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/window_close_dark"
                android:layout_gravity="center" />
        </LinearLayout>

        <!--<Button
            android:id="@+id/btnCancel"
            android:layout_below="@+id/linName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_default"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/cancel"/>

        <Button
            android:id="@+id/btnOk"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/linName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_default"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/status_ok"/>-->

    </RelativeLayout>

</RelativeLayout>