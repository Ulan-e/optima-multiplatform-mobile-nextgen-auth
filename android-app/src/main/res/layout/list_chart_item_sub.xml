<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <RelativeLayout
            android:id="@+id/linSub"
            android:layout_width="50dp"
            android:layout_height="match_parent">

            <View
                android:id="@+id/sub1"
                android:layout_width="2dp"
                android:layout_height="21dp"
                android:background="@color/cardview_dark_background"
                android:layout_alignStart="@+id/sub2" />

            <View
                android:id="@+id/sub2"
                android:layout_marginStart="24dp"
                android:layout_marginTop="20dp"
                android:layout_width="25dp"
                android:background="@color/cardview_dark_background"
                android:layout_height="2dp"
                android:layout_gravity="center"/>

            <View
                android:id="@+id/sub3"
                android:layout_centerHorizontal="true"
                android:background="@color/cardview_dark_background"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="25dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Банковские операции"
                android:textColor="@color/gray_black_56_56_56"
                android:textSize="17sp"
                android:ellipsize="end"
                android:maxLines="2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:layout_gravity="start"
                    android:text="14%"
                    android:layout_marginLeft="30dp"
                    android:gravity="start"
                    android:textColor="@color/light_grey_blue"
                    android:textSize="14sp"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_gravity="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000 KGS"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/gray_atf"
                    android:textSize="18sp"
                    android:maxLines="1"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>