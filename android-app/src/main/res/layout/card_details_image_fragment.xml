<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:id="@+id/cardView"
    app:cardBackgroundColor="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="60dp"
                    android:visibility="invisible"/>

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tvAmount"
                android:textAlignment="textEnd"
                android:layout_gravity="center|end"
                android:textSize="18sp"
                android:textColor="@color/white"/>

        </LinearLayout>

        <View
            android:id="@+id/stub"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_centerVertical="true"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:id="@+id/tvCardNumber"-->
                <!--android:textAlignment="center"-->
                <!--android:textColor="@color/white"-->
                <!--android:paddingStart="5dp"-->
                <!--android:paddingEnd="5dp"-->
                <!--android:textSize="20sp"-->
                <!--android:layout_below="@+id/stub"-->
                <!--android:layout_centerHorizontal="true"/>-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stub"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                android:id="@+id/cvDefaultIcon"
                app:cardCornerRadius="20dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="7dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:id="@+id/imgStar"
                    android:layout_below="@+id/stub"
                    android:padding="8dp"
                    app:srcCompat="@drawable/ic_default_card_star" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/tvCardNumber"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:paddingStart="17dp"
                android:paddingEnd="17dp"
                android:textSize="20sp"/>
        </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cvMulti"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:cardCornerRadius="4dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/white"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvMulti"
                        android:textSize="9sp"
                        android:padding="4dp"
                        android:textColor="@color/black"
                        android:text="@string/multi" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:id="@+id/tvCardType"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="40dp"
                    android:id="@+id/ivBrandCardLogo"
                    app:srcCompat="@drawable/ic_visa_debit"
                    android:visibility="invisible"/>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


