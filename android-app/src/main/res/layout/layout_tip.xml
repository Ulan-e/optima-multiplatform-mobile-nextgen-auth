<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="8dp"
        android:layout_marginTop="10dp"
        android:text="@string/text_default_incoming_card_tip"
        android:layout_marginHorizontal="4dp"
        android:textAlignment="center"
        android:textColor="@color/gray_middle"
        android:textSize="@dimen/text_size_15sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:background="?attr/selectableItemBackground"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:paddingHorizontal="@dimen/margin_15dp"
        android:paddingVertical="7dp"
        android:text="@string/status_ok"
        android:textColor="@color/red_atf"
        android:textSize="@dimen/text_size_15sp" />
</LinearLayout>