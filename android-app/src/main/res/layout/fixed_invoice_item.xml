<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvName"
                android:textSize="18sp"
                android:textColor="@color/gray_black_56_56_56"
                android:text="паркинг"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvMeasure"
                android:textColor="@color/gray_181_181_181"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:text="564 564" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12 000"
            android:id="@+id/tvServiceAmount"
            android:layout_weight="1"
            android:textColor="@color/gray_black_56_56_56"
            android:textSize="17sp"
            android:gravity="end" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linDebt"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cbDebt"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/gray_black_56_56_56"
            android:text="@string/debt"
            android:checked="true"
            android:layout_marginLeft="-5dp"
            android:layout_marginRight="-5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDebt"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/gray_black_56_56_56"
            android:gravity="end"/>

    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linPenalty"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">


        <CheckBox
            android:paddingRight="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="15sp"
            android:id="@+id/isPenalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/penny" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvPenalty"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/gray_black_56_56_56"
            android:gravity="end"/>

    </LinearLayout>


    <CheckBox
        android:layout_marginStart="16dp"
        android:paddingRight="16dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textSize="15sp"
        android:id="@+id/isPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pay_action" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="17sp"
            android:textColor="@color/gray_black_56_56_56"
            android:text="@string/sum_to_payment"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edAmount"
            android:layout_weight="1"
            android:textColor="@color/gray_black_56_56_56"
            android:textSize="17sp"
            android:background="@null"
            android:inputType="numberDecimal"
            android:gravity="end" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="#e7e7e7" />

</LinearLayout>