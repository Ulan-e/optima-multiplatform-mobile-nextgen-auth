    </style>

    <style name="Text_16_main_green_bold">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray_atf_</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Text_12_main_gray">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/gray_atf_</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- стиль для загрузки данных -->
    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/gray_126_126_126</item>
        <item name="android:textSize">@dimen/text_size_15sp</item>
        <item name="android:background">@drawable/bg_rounded_corners</item>
        <item name="colorAccent">@color/red_atf</item>
    </style>

    <!-- стиль для загрузки данных -->
    <style name="MainAlertDialogStyle" parent="AlertDialogTheme">
        <item name="android:textColor">@color/gray_126_126_126</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:background">@drawable/bg_rounded_corners</item>
        <item name="colorAccent">@color/red_atf</item>
    </style>

    <style name="ShapeAppearanceOverlay">
        <item name="cornerSize">50%</item>
    </style>
</resources>
